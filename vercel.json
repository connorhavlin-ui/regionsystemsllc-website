{
    "framework": "nextjs",
    "buildCommand": "npm run build",
    "outputDirectory": ".next",
    "installCommand": "npm install",
    "devCommand": "npm run dev",
    "env": {
        "SMTP_HOST": "@smtp_host",
        "SMTP_PORT": "@smtp_port",
        "SMTP_USER": "@smtp_user",
        "SMTP_PASS": "@smtp_pass",
        "SMTP_FROM": "@smtp_from",
        "CONTACT_EMAIL": "@contact_email"
    },
    "functions": {
        "src/app/api/contact/route.ts": {
            "maxDuration": 30
        }
    },
    "headers": [
        {
            "source": "/(.*)",
            "headers": [
                {
                    "key": "X-Content-Type-Options",
                    "value": "nosniff"
                },
                {
                    "key": "X-Frame-Options",
                    "value": "DENY"
                },
                {
                    "key": "X-XSS-Protection",
                    "value": "1; mode=block"
                },
                {
                    "key": "Referrer-Policy",
                    "value": "strict-origin-when-cross-origin"
                }
            ]
        }
    ]
}
